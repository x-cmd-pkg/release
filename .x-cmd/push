# shellcheck shell=dash

cd "$(x wsroot)" || return 1

case "$1" in
    pre_release)
        git add "$(x wsroot)"
        git commit -m "update pkg bundle package by $GITHUB_RUN_NUMBER"
        git push -f git@github.com:x-cmd-pkg/release main
        ;;
    release)
        git clone git@github.com:x-cmd-pkg/release

        (
            git clone git@gitcode.net:x-cmd/pkg
            cp -f release/dist/"${x_cmd_pkg_version}".tar.gz pkg/dist/"${x_cmd_pkg_version}".tar.gz
            cp -f release/dist/"${x_cmd_pkg_version}".tar.gz pkg/dist/"${x_cmd_pkg_version}_hash.txt"
            cd ./pkg || return
            git add "$(x wsroot)/dist"
            git commit -m "update pkg bundle package by $GITHUB_RUN_NUMBER"
            git push git@gitcode.net:x-cmd/pkg main
        ) || return
            rm -rf pkg
        (
            cp -f release/dist/"${x-cmd-pkg-version}".tar.gz ./dist/"${x-cmd-pkg-version}".tar.gz
            cp -f release/dist/"${x-cmd-pkg-version}".tar.gz ./dist/"${x-cmd-pkg-version}_hash.txt"
            git add "$(x wsroot)/dist"
            git commit -m "update pkg bundle package by $GITHUB_RUN_NUMBER"
            # git push git@github.com:x-cmd/pkg main
        ) || return

        (
            git clone git@gitee.com:x-cmd/pkg
            cp -f release/dist/"${x-cmd-pkg-version}".tar.gz pkg/dist/"${x-cmd-pkg-version}".tar.gz
            cp -f release/dist/"${x-cmd-pkg-version}".tar.gz pkg/dist/"${x-cmd-pkg-version}_hash.txt"
            cd ./pkg || return
            git add "$(x wsroot)/dist"
            git commit -m "update pkg bundle package by $GITHUB_RUN_NUMBER"
            #git push git@gitee.com:x-cmd/pkg main
        ) || return

        ;;
    test_doc)
        git add "$(x wsroot)/doc"
        git commit -m "update pkg test doc by $GITHUB_RUN_NUMBER"
        git push git@github.com:x-cmd/pkg "$(git branch --show-current)"
        ;;
    *)
        x:error "unknown push type: $1"
        return 1
esac
