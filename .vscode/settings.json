{
    "files.defaultLanguage": "shellscript",
    "files.associations": {
        "**/*.awk": "awk",
        "**/*.json": "json",
        "**/*.md": "markdown",
        "**/*.yml": "yaml",
        "**/LICENSE": "TXT",
        "**/*": "shellscript",
    },
    "files.trimTrailingWhitespace": true,
    "editor.detectIndentation": true,
    "editor.tabSize": 4,
    "explicitFolding.rules": {
        "awk": [
            {
                "beginRegex": "^\\s*#\\s*Section:?",
                "endRegex": "^\\s*#\\s*EndSection",
                "autoFold": true
            }
        ],
        "yaml": [
            {
                "beginRegex": "^\\s*#\\s*Section:?",
                "endRegex": "^\\s*#\\s*EndSection",
                "autoFold": true
            }
        ],
        "shellscript": [
            {
                "beginRegex": "^\\s*#\\s*Section:?",
                "endRegex": "^\\s*#\\s*EndSection",
                "autoFold": true
            }
        ]
    },
    "better-comments.highlightPlainText": true,
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false,
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8"
    },
    "python.formatting.provider": "none",
    "ansible.python.interpreterPath": "/Users/niracler/.x-cmd.root/local/data/r/DEFAULT/pkg/installed/python/py38_22.11.1-1/bin/python",
    // "editor.tokenColorCustomizations": {
    //     "comments": "#00ff95af"
    // }
}
